            "description": "Filter by ticket priority",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["Critical", "High", "Medium", "Low"]
            }
          },
          {
            "name": "status",
            "in": "query",
            "description": "Filter by ticket status",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["Open", "In Progress", "Resolved", "Closed"]
